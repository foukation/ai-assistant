<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="5dp"
    android:paddingHorizontal="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@drawable/card_background">

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/trip_item_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rest" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="6dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/trip_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="山水阁中餐厅(沙河唯实中心)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/trip_item_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9分"
                        android:textStyle="bold"
                        android:textColor="#447dee"
                        android:layout_marginRight="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/trip_item_bus_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周一至周日 09:00-21:30"
                        android:textColor="#333"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/trip_item_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:text="工业路233号福州苏宁广场A区第4层406A406B号商铺第4层406A406B号商铺"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/trip_item_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="餐饮服务"
                        android:textSize="11sp"
                        android:textColor="#447dee"
                        android:background="@drawable/trip_item_tag_bg"
                        android:paddingHorizontal="4dp"
                        android:layout_marginRight="8dp" />

                    <TextView
                        android:id="@+id/trip_item_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中餐厅"
                        android:textSize="11sp"
                        android:textColor="#447dee"
                        android:background="@drawable/trip_item_tag_bg"
                        android:paddingHorizontal="4dp"
                        android:layout_marginRight="8dp" />

                    <TextView
                        android:id="@+id/trip_item_tag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浙江菜"
                        android:textSize="11sp"
                        android:textColor="#447dee"
                        android:background="@drawable/trip_item_tag_bg"
                        android:paddingHorizontal="4dp"
                        android:layout_marginRight="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8FAFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐理由"
                    android:textColor="#447dee"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:drawablePadding="4dp"
                    />
                <TextView
                    android:id="@+id/trip_recommend_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="这里显示推荐理由内容，可以是多行文字。这家餐厅环境优雅，菜品精致，服务周到，是家庭聚餐和商务宴请的理想选择。"
                    android:textColor="#666"
                    android:maxLines="3"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/trip_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            android:background="#F5F6F7"/>

    </LinearLayout>
</LinearLayout>